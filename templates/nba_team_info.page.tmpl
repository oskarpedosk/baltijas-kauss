{{template "base" .}}

{{define "content"}}
{{$res := index .Data "team_info"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5">Team info summary</h1>

            <hr>

            <table class="table table-striped">
                <thead></thead>
                <tbody>
                    <tr>
                        <td>Team name:</td>
                        <td>{{$res.TeamName}}</td>
                    </tr>
                    <tr>
                        <td>Abbreviation:</td>
                        <td>{{$res.Abbreviation}}</td>
                    </tr>
                    <tr>
                        <td>Team color:</td>
                        <td>{{$res.TeamColor}}</td>
                    </tr>
                    <tr>
                        <td>Dark text:</td>
                        <td>{{$res.DarkText}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


{{end}}