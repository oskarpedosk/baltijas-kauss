{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>2K22 RATINGS</h1>
                <table class="sortable">
                    <thead>
                        <tr>
                            <th>NAME</th>
                            <th>OVERALL</th>
                            <th>TEAM</th>
                            <th>ARCHETYPE</th>
                            <th>HEIGHT</th>
                            <th>WEIGHT</th>
                            <th>BLOCK</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{range .NBAPlayerData}}
                        <tr>
                            <td>{{.Name}}</td>
                            <td>{{.Stats.Overall}}</td>
                            <td>{{.Team}}</td>
                            <td>{{.Archetype}}</td>
                            <td>{{.Height}}</td>
                            <td>{{.Weight}}</td>
                            <td>{{.Stats.Block}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your IP address yet. Visit the <a href="/">Home page</a> so I can set it.
                    {{end}}
                </p>

            </div>
        </div>
    </div>
{{end}}