{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>2K22 RATINGS</h1>
                <table>
                    <thead>
                        <tr>
                            <td>RANK</td>
                            <td>NAME</td>
                            <td>TEAM</td>
                            <td>HEIGHT</td>
                            <td>OVERALL</td>
                            <td>3PT</td>
                            <td>DUNK</td>
                        </tr>
                    </thead>

                    <tbody>
                        {{range .NBAPlayerData}}
                        <tr>
                            <td>{{.Rank}}</td>
                            <td>{{.Name}}</td>
                            <td>{{.Team}}</td>
                            <td>{{.Height}}</td>
                            <td>{{.OverallRating}}</td>
                            <td>{{.ThreePointRating}}</td>
                            <td>{{.DunkRating}}</td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your IP address yet. Visit the <a href="/">Home page</a> so I can set it.
                    {{end}}
                </p>

            </div>
        </div>
    </div>
{{end}}