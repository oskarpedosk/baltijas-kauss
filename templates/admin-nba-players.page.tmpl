{{template "admin" .}}

{{define "css"}}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{{end}}

{{define "page-title"}}
    NBA Players
{{end}}

{{define "content"}}
    <form method="post" action="/admin/players" novalidate>
        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
        <select class="form-select" name="limit">
            <option value="0">All players</option>
            <option value="5">Top 5</option>
            <option value="20">Top 20</option>
            <option value="50">Top 50</option>
            <option value="100">Top 100</option>
            <option value="150">Top 150</option>
            <option value="250">Top 250</option>
            <option value="450">Top 450</option>
        </select>
        <button class="btn btn-primary">Update</button>
    </form>
    <div class="col-md-12">
        <table class="table table-lg table-striped table-hover" id="all-players">
            <thead>
                <tr>
                    <th>Player ID</th>
                    <th>Rank</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Overall Rating</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{range $index, $players := index .Data "nba_players"}}
                <tr>
                    <td>{{$players.PlayerID}}</td>
                    <td>{{add $index 1}}</td>
                    <td>{{$players.FirstName}}</td>
                    <td>{{$players.LastName}}</td>
                    <td>{{$players.StatsOverall}}</td>
                    <td><a href="/admin/players/{{$players.PlayerID}}">EDIT</a></td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
{{end}}

{{define "js"}}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script>
        const dataTable = new simpleDatatables.DataTable("#all-players", {
            filters: {"Primary Position": ["PG", "SG", "SF", "PF", "C"], "Secondary Position": ["PG", "SG", "SF", "PF", "C"]}, 
            searchable: true,
            fixedHeight: true,
        })
    </script>
{{end}}