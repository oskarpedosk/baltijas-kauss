<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Baltijas Kauss</title>

    <link rel="icon" type="image/x-icon" href="/static/icons/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/style.css">

    <!-- Custom styles for this template -->
    <link href="/static/css/login.css" rel="stylesheet">
</head>

<body>

    <title>Baltijas Kauss</title>

    <main class="form-signin w-100 m-auto text-center">
        <div class="row justify-content-center">
            <div class="col" style="max-width: 350px;">
                <form method="post" action="/" novalidate>
                    <a href="/"><img class="mb-4" src="/static/images/baltijaskauss/bk.png" alt="" width="120"></a>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group text-start">
                        {{with .Form.Errors.Get "email"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input style="min-height: 50px;" type="email" autocomplete="off" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}" name="email" id="email" placeholder="name@example.com" value="" required>
                    </div>
                    <div class="form-group text-start mt-2 mb-4">
                        {{with .Form.Errors.Get "password"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input style="min-height: 50px;" type="password" autocomplete="off" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}" name="password" id="password" placeholder="Password" value="" required>
                    </div>
                    <button class="w-100 btn btn-lg bkcolor text-white" type="submit">Sign in</button>
                </form>
            </div>
        </div>
    </main>



</body>

</html>